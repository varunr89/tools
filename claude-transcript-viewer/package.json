{
  "name": "claude-transcript-viewer",
  "version": "1.1.0",
  "description": "Enhanced viewer for Claude Code transcripts with dark mode, infinite scroll, message filtering, and search",
  "main": "dist/server.js",
  "type": "module",
  "bin": {
    "claude-transcript-viewer": "./dist/server.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "index": "tsx src/indexer/index.ts",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "claude",
    "claude-code",
    "transcript",
    "viewer",
    "anthropic"
  ],
  "author": "Varun R",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/varunr89/tools.git",
    "directory": "claude-transcript-viewer"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.9",
    "better-sqlite3": "^12.6.2",
    "cheerio": "^1.1.2",
    "express": "^5.2.1",
    "sqlite-vec": "^0.1.7-alpha.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@vitest/coverage-v8": "^4.0.17",
